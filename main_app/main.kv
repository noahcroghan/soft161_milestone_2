<LoginScreen>:
    name: 'login'
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 100]
        spacing: 20

        Label:
            text: 'Login to Your Profile'
            font_size: 40
            font_name: 'Roboto-Bold'
            size_hint_y: None
            height: dp(60)

        Spinner:
            id: existing_users_spinner
            text: 'Select Existing User'
            values: []
            size_hint_y: None
            height: dp(40)

        TextInput:
            id: new_username_input
            hint_text: 'Enter New Username'
            multiline: False
            size_hint_y: None
            height: dp(40)

        Button:
            text: 'Create Profile'
            on_press: app.create_profile(new_username_input.text)
            size_hint_y: None
            height: dp(40)

        Button:
            text: 'Login'
            on_press: app.login_user(existing_users_spinner.text)
            size_hint_y: None
            height: dp(40)

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Cryptocurrency App'
                font_size: 60
                font_name: 'Roboto-Bold'
        GridLayout:
            cols: 1
            rows: 3
            padding: 20
            spacing: 20
            Button:
                text: 'New Cryptocurrency'
                on_press:
                    root.transition.direction = 'left'
                    root.current = 'new_crypto_screen'
            Button:
                text: 'New Portfolio Entry'
                on_press:
                    root.transition.direction = 'left'
                    root.current = 'new_portfolio_screen'
            Button:
                text: 'Check Portfolio Value'
                on_press:
                    root.transition.direction = 'left'
                    root.current = 'check_portfolio_screen'
        BoxLayout:

<Screen>:
    canvas.before:
        Color:
            rgba: ((21/256), (44/256), (54/256), 1.0)
        Rectangle:
            pos: self.pos
            size: self.size

<Button>
    background_normal: ''
    background_color: ((13/256), (179/256), (93/256), 1.0)
    font_size: 30