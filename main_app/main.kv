<Screen>:
    canvas.before:
        Color:
            rgba: ((21/256), (44/256), (54/256), 1.0)
        Rectangle:
            pos: self.pos
            size: self.size

<Button>
    background_normal: ''
    background_color: ((13/256), (179/256), (93/256), 1.0)
    font_size: sp(30)
    font_name: 'Roboto-Bold'

<Label>:
    font_size: sp(20)
    font_name: 'Roboto-Bold'

<TextInput>:
    font_size: sp(16)
    font_name: 'Roboto-Bold'

<Spinner>:
    font_size: sp(14)
    font_name: 'Roboto-Bold'

